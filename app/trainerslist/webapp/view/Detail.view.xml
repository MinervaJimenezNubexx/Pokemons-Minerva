<mvc:View xmlns:form="sap.ui.layout.form" 
    controllerName="com.nbx.trainerslist.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="DetailID" title="{i18n>titleDetail}">

        <ObjectHeader
            title="{firstName} {lastName}"
            number="{ID}"
            numberUnit="ID">

                <ObjectAttribute text="Email: {Email}" />
                <ObjectAttribute text="Birth Date: {BirthDate}" />
                <ObjectAttribute text="Medals: {MedalsOwned}" />
                <ObjectAttribute text="{i18n>EmployeeCountry} {Country}" />

        </ObjectHeader>

        <IconTabBar >
            <items>
                <IconTabFilter text="Teams of this trainer">
                    <core:Fragment fragmentName="com.nbx.trainerlist.view.fragment.teamsTable" type="XML"/>
                </IconTabFilter>
            </items>
        </IconTabBar>

    </Page>
</mvc:View>